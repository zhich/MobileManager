<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/theme_color">

    <TextView
        android:id="@+id/titlebar_tv_back"
        style="@style/layout_wrap"
        android:drawableLeft="@drawable/base_ic_arrow_toolbar"
        android:gravity="center_vertical|left"
        android:padding="@dimen/dp_10" />

    <TextView
        android:id="@+id/titlebar_tv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        tool:text="a标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题b" />


    <TextView
        android:id="@+id/titlebar_tv_right"
        style="@style/layout_wrap"
        android:drawableLeft="@drawable/ic_more"
        android:gravity="center_vertical|right"
        android:padding="@dimen/dp_10"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:visibility="invisible" />
</LinearLayout>