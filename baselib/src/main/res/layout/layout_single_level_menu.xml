<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/layout_full"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/singleLevelMenu_tv_cancel"
            style="@style/layout_wrap"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="@string/cancel"
            android:textColor="@color/selector_8e8e8e_dddddd"
            android:textSize="@dimen/common_font_size" />

        <TextView
            android:id="@+id/singleLevelMenu_tv_title"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_161616"
            android:textSize="@dimen/big_font_size"
            tool:text="人员类别" />

        <TextView
            android:id="@+id/singleLevelMenu_tv_sure"
            style="@style/layout_wrap"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="@string/sure"
            android:textColor="@color/selector_8e8e8e_dddddd"
            android:textSize="@dimen/common_font_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_divider" />

    <com.zch.baselib.widget.wheel.MyWheelView
        android:id="@+id/singleLevelMenu_wheel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300" />
</LinearLayout>